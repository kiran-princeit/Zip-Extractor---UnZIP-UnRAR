<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/zip_folder" />

    <ImageView
        android:id="@+id/please_wait"
        android:layout_width="326px"
        android:layout_height="40px"
        android:layout_below="@+id/lottie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250px"
        android:src="@drawable/please_wait" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="900px"
        android:layout_height="20px"
        android:layout_below="@+id/please_wait"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:indeterminateTint="@color/white"
        android:max="100"
        android:min="0"
        android:progressDrawable="@drawable/progress_bar"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/inBackground"
        android:layout_width="620px"
        android:layout_height="130px"
        android:layout_below="@+id/progress"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/effect_run_in_background" />
</RelativeLayout>
